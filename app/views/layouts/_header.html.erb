<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to image_tag("rails.png", alt: "Rails logo"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to t(".btn_home"), root_path %></li>
        <li><%= link_to t(".btn_help"), help_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".btn_en"), locale: :en %></li>
        <li><%= link_to t(".btn_vi"), locale: :vi %></li>
        <li>
          <% if logged_in? %>
          <li><%= link_to t(".btn_users"), "#" %></li>
          <li class="dropdown">
            <%= link_to t(".btn_account"), "#",
              :"data-toggle" => "dropdown", class: "dropdown-toggle" %>
            <ul class="dropdown-menu">
              <li><%= link_to t(".btn_profile"), current_user %></li>
              <li><%= link_to t(".btn_settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".btn_logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".btn_login"), login_path %></li>
        <% end %>
        </li>
      </ul>
    </nav>
  </div>
</header>
